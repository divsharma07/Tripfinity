<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.tripfinity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tripfinity_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tripfinity_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tripfinity">
        <activity
            android:name=".view.HistoryExpenseActivity"
            android:exported="false" />
        <activity
            android:name=".view.ExpenseActivity"
            android:exported="false" />
        <activity
            android:name=".view.AddExpenseActivity"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:name=".view.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">

             <intent-filter>
             <action android:name="android.intent.action.MAIN" />


             <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".view.AuthActivity"
            android:exported="true"
            android:theme="@style/SplashTheme">
        </activity>
    </application>

</manifest>